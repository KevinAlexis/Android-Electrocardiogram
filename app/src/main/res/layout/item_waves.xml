<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_Wavename"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:text="Electro 1"
                android:gravity="center"
                android:textSize="28sp"
                android:textColor="#504a4a"
                android:textStyle="bold"
                android:layout_toLeftOf="@+id/button_basura"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>
            <TextView
                android:id="@+id/text_waveDate"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Onda # 1"
                android:gravity="right"
                android:textStyle="italic"
                android:textSize="19sp"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/text_Wavename"
                android:layout_toLeftOf="@+id/button_basura"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginRight="30dp"
                />


            <Button
                android:text=""
                android:layout_marginRight="10dp"
                android:layout_width="35dp"
                android:layout_height="35dp"

                android:background="@drawable/ic_basura"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:backgroundTint="#b63537"
                android:id="@+id/button_basura"/>


        </RelativeLayout>

    </android.support.v7.widget.CardView>




</LinearLayout>